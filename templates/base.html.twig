                    </div>
                </li>
                <!-- END Messages -->
            {% endif %}
        </ul>
    </div>
</header>
<!-- END Topbar -->


<!-- Main container -->
<main class="main-container">
    <header class="header">
        <div class="header-info">
            <div class="left">
                <h2 class="header-title" id="header-title">
                    {% block header %}
                        <strong>No title</strong>
                    {% endblock %}
                </h2>
            </div>
            {% block headerright %}

            {% endblock %}
        </div>
        {% block headeractions %}

        {% endblock %}
    </header>

    <div class="main-content" id="mainContent">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="callout callout-{{ label }}" role="alert">
                    <button type="button" class="close" data-dismiss="callout" aria-label="Close">
                        <span>&times;</span>
                    </button>
                    <h5>{{ 'callout'~label|trans }}</h5>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}


        {% block content %}


        {% endblock %}

        <!-- bouton fab en bas de chaque page -->
        {% block fabactions %}

        {% endblock %}
        <!-- fin du bouton fab -->

    </div><!--/.main-content -->


