<div class="card">
    <h4 class="card-title">Vos informations d'identification</h4>
    <div class="card-body">
        <p><strong>Prénom Nom :</strong> {{ user.display }}</p>
        <p><strong>Mail Université :</strong> {{ user.mailuniv }}</p>
        <p><strong>Site université/pro :</strong> {{ user.siteuniv }}</p>
    </div>
</div>

<div class="card">
    <h4 class="card-title">Editez vos données personnelles</h4>
    <div class="card-body">
        {% form_theme form 'form/bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">{{ button_label|default('label.save'|trans) }}</button>
        {{ form_end(form) }}
    </div>
</div>

{% if is_granted ('ROLE_ETUDIANT') %}
    <div class="card">
        <h4 class="card-title">Votre parcours</h4>
        <div class="card-body">

        </div>
    </div>
{% endif %}
