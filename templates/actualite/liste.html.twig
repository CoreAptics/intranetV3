{% extends 'base.html.twig' %}

{% block header %}
    {{ 'actualite.liste.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_dashboard'|trans }}"><i
                        class="material-icons">dashboard</i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'actualite.liste.heading'|trans }}</h4>
        <div class="card-body">
            {% for actualite in actualites %}
                {{ actualite.titre }}
            {% endfor %}
        </div>
    </div>
{% endblock %}