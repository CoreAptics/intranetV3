{% extends 'base.html.twig' %}

{% block header %}
    Liste des <strong>notes du semestre {{ semestre.libelle }}</strong>
{% endblock %}

{% block headerright %}
    <div class="right gap-items-2">
        {% for sem in user_data.semestres %}
            <a href="{{ path('administration_notes_semestre_index', {semestre:sem.id}) }}"
               class="btn btn-square btn-round {% if sem.id == semestre.id %}btn-primary{% endif %}"
               title="Changer de semestre"
               data-provide="tooltip"
               data-placement="bottom"
            >{{ sem.libelle }}</a>
        {% endfor %}
    </div>
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_semestre_index', {semestre:semestre.id}) }}"
               class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_semestres'|trans }}"><i class="ti-arrow-left"></i></a>
            <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><i class="ti-home"></i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered" cellspacing="0">
                <thead>
                <tr>
                    <th>{{ 'table.matiere'|trans }}</th>
                    <th>{{ 'table.coefficient'|trans }}</th>
                    <th>{{ 'table.nb_notes'|trans }}</th>
                    <th>{{ 'table.evaluations'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Mati√®re</td>
                    <td>Coefficient</td>
                    <td>Nb Notes</td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-success">Eval du 15/11/2016 (#1808)</button>
                            <button class="btn btn-info btn-outline btn-square optAfficher"><i class="fa fa-eye"></i>
                            </button>
                            <button class="btn btn-warning btn-outline btn-square optAfficher"><i
                                        class="fa fa-lock"></i></button>
                            <button class="btn btn-danger btn-outline btn-square supprimer" data-provide="tooltip"
                                    data-placement="bottom"
                                    title="Supprimer"><i
                                        class="ti-close"></i></button>
                        </div>
                        <br/>
                    </td>
                </tr>

                {% for matiere in matieres %}
                <tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
