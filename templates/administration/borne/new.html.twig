{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.borne.new.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        {{ include('composants/adm-buttons-new.html.twig', {elt: 'borne'}) }}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.borne.new.heading'|trans }}</h4>
        <div class="card-body">
            {{ include('composants/adm-form.html.twig') }}
        </div>
    </div>
    <div class="input-group" data-provide="datepicker">
        <div class="input-group-prepend">
            <span class="input-group-text">From</span>
        </div>
        <input type="text" class="form-control">
        <div class="input-group-prepend input-group-append">
            <span class="input-group-text">To</span>
        </div>
        <input type="text" class="form-control">
    </div>
{% endblock %}