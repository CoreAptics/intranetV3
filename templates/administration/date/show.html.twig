{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.date.show.heading'|trans }}
{% endblock %}

{% block headeractions %}
<div class="header-action">
    {{ include('composants/adm-buttons-show.html.twig', {elt: 'date', id: date.id}) }}
</div>
{% endblock %}

{% block content %}
<div class="card">
    <h4 class="card-title">{{ 'adm.date.show.heading'|trans }}</h4>
    <div class="card-body">

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'table.id'|trans }}</th>
                <td>{{ date.id }}</td>
            </tr>
            <tr>
                <th>{{ 'table.titre'|trans }}</th>
                <td>{{ date.titre }}</td>
            </tr>
            <tr>
                <th>{{ 'table.texte'|trans }}</th>
                <td>{{ date.texte }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>
{% endblock %}